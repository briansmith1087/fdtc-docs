<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>myFDTC Design System</title>

    <!-- Load your CSS bundle -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/briansmith1087/myFDTC-Design-System@v0.1.1/dist/fdtc.css" />
    <style>
      /* Page scaffold: white background so DS elements pop */
      body { margin: 0; background: #ffffff; color: #0b1620; font-family: Poppins, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
      .container { max-width: 1100px; margin: 0 auto; padding: 0 16px 48px; }

      /* Hero banner with image + overlay */
      .hero {
        position: relative;
        min-height: 220px;
        background-image:
          linear-gradient(180deg, rgba(0,0,0,.25), rgba(0,0,0,.45)),
          url("https://www.fdtc.edu/media/fdtc/about/our-mission-vision-and-history/MissionStatement_Hero-Image.jpg");
        background-size: cover;
        background-position: center;
        border-bottom: 1px solid #e3e7ee;
      }
      .hero__inner {
        height: 100%;
        display: flex;
        align-items: end;
        padding: 24px 16px;
      }
      .hero__title {
        color: #ffffff;
        font-weight: 600;
        font-size: 28px;
        letter-spacing: .2px;
        text-shadow: 0 1px 2px rgba(0,0,0,.35);
      }

      /* Section headings */
      h2 { margin: 28px 0 12px; font-weight: 600; font-size: 20px; }

      /* Simple grid for component demos */
      .grid { display: grid; gap: 16px; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); }
    </style>
  </head>
  <body>
    <!-- Banner -->
    <header class="hero">
      <div class="hero__inner container">
        <div class="hero__title">myFDTC Design System</div>
      </div>
    </header>

    <main class="container">
      <!-- Card demo -->
      <h2>Card + Surface</h2>
      <div class="fdtc-card">
        <div class="fdtc-card__header">
          <div class="fdtc-card__title">FDTC Card Header</div>
          <button class="fdtc-btn fdtc-btn--sm">Help</button>
        </div>
        <div class="fdtc-card__body">
          <div class="u-surface">This is a surface block inside the card body.</div>
        </div>
        <div class="fdtc-card__footer">
          <button class="fdtc-btn fdtc-btn--accent">Advisors</button>
          <button class="fdtc-btn">Primary</button>
          <button class="fdtc-btn fdtc-btn--danger">Danger</button>
        </div>
      </div>

      <!-- Buttons -->
      <h2>Buttons</h2>
      <div class="grid">
        <div class="u-surface">
          <div class="u-gap-4 u-flex u-wrap">
            <button class="fdtc-btn">Primary</button>
            <button class="fdtc-btn fdtc-btn--accent">Accent</button>
            <button class="fdtc-btn fdtc-btn--danger">Danger</button>
            <button class="fdtc-btn fdtc-btn--sm">Small</button>
            <button class="fdtc-btn fdtc-btn--primary fdtc-btn--lg">Large</button>
          </div>
        </div>
      </div>

      <!-- Utilities -->
      <h2>Utilities (layout & spacing)</h2>
      <div class="grid">
        <div class="u-surface">
          <div class="u-flex u-items-center u-justify-between">
            <div>Left</div>
            <div>Right</div>
          </div>
        </div>
        <div class="u-surface">
          <div class="u-flex u-flex-col u-gap-4">
            <div class="u-surface">Stack item 1</div>
            <div class="u-surface">Stack item 2</div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
